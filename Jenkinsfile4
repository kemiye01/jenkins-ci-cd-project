pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
                }
           }
        stage('Deploy') {
            steps {
               sh "sudo chown -R jenkins:jenkins /var/lib/jenkins/workspace/cd-proj/target.webapp-0.2.war
               sh "chmod -r 777 /var/lib/jenkins/workspace/cd-proj/target/webapp-0.2.war"
               sh "StrictHostKeyChecking=no /var/lib/jenkins/workspace/cd-proj/target/webapp-0.2.war centos@35.87.24.39:/home/centos/opt/tomcat/"
            }
        }
    }
}
